<div class="modal fade right" id="userModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable modal-xl modal-right">
        <div class="modal-content h-100 border-0">

            <EditForm Model="@createEditUsersModel" OnSubmit="HandelValidSubmit" class="d-flex flex-column h-100">
                <DataAnnotationsValidator />

                <!-- Header-->
                <div class="modal-header border-0">
                    <h5 > @((createEditUsersModel.Id ==0) ? "Create User" : "Edit User") </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <!-- Body-->
				<div class="modal-body overflow-auto flex-grow-1" style="max-height: 90vh; margin-top: -15px;">
					<div class="row h-100">
						

						<div class=" p-3 pt-0 body-medium">
								<ul class="nav nav-tabs mb-3">
									
									<li class="nav-item">
										<a class="nav-link @(activeTab == "details" ? "active" : "")" href="#details" data-bs-toggle="tab" @onclick="@(() => OnTabClick("details"))">Details</a>
									</li>
									<li class="nav-item">
									<a class="nav-link @(activeTab == "access" ? "active" : "")" href="#access" data-bs-toggle="tab" @onclick="@(() => OnTabClick("access"))">Access</a>
									</li>
								
                                </ul>

								<div class="tab-content p-0 bg-transparent">
									
									<div class="tab-pane fade @(activeTab == "details" ? "show active" : "")" id="details">
                                    <CreateEditUserDetailsTab userDetailsViewModel="createEditUsersModel.CreateEditUserDetailsViewModel" />
									</div>
								<div class="tab-pane fade @(activeTab == "access" ? "show active" : "")" id="access">
                                    <CreateEditUserAccessTab userAccessViewModel="createEditUsersModel.CreateEditUserAccessViewModel" />
									</div>
								</div>

						</div>
</div>
                </div>

                <!-- Footer-->
				<div class="modal-footer bg-white mt-auto" style="padding-top: 1rem;">
					<button type="button" class="btn_modal-close body-medium" data-bs-dismiss="modal">Cancel</button>
					<button type="submit"
							class="btn_modal-success_save title-h4-semi-bold"
							disabled="@isSubmitting"
							style="@(isSubmitting ? "opacity: 0.6; pointer-events: none;" : null)">
						@if (isSubmitting)
						{
							<span><i class="spinner-border spinner-border-sm me-1"></i> Saving...</span>
						}
						else
						{
							<span>Save</span>
						}
					</button>
				</div>

            </EditForm>
        </div>
    </div>
</div>

@code{



	[Parameter] public bool isSubmitting { get; set; }
	[Parameter] public CreateEditUserViewModel createEditUsersModel { get; set; } = new();
	[Parameter] public EventCallback<CreateEditUserViewModel> OnSubmit { get; set; }

	private string activeTab;
	private void OnTabClick(string details)
	{
		activeTab = details;
	}

	public int EmployeeId { get; set; } = -1;

	public async Task ShowModal(CreateEditUserViewModel model)
    {
		createEditUsersModel = model;
        activeTab = "details"; 
		EmployeeId = createEditUsersModel?.CreateEditUserDetailsViewModel?.EmployeeId ?? -1;
        await JS.InvokeVoidAsync("showModal", "userModal");
		StateHasChanged();
    }

    public async Task HandelValidSubmit()
    {
        await OnSubmit.InvokeAsync(createEditUsersModel);
    }
}