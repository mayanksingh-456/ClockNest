    private async Task ConfirmDelete()
    {
        showDeletePopup = false;

        int userId = await UserContextService.GetUserIdAsync(AuthenticationStateProvider);

        SpinnerService.Show();
        try
        {
            var workrecordToDelete = exceptionalItem.Where(t => selectedExceptionItems.Contains(t.Id)).ToList();

            var success = await WorkRecordNotesService.DeleteExceptionalItemAsync(workrecordToDelete);

            if (success)
            {
                exceptionalItem.RemoveAll(t => selectedExceptionItems.Contains(t.Id));
                selectedExceptionItems.Clear();               
                ToastService.Show("Selected exceptionalItem deleted successfully", ToastType.Success);
            }
        }
        finally
        {
            await ReloadWorkRecordAsync.InvokeAsync();
            SpinnerService.Hide();
        }
    }
    
}



