@using ClockNest.Services.DeleteConfirmService
@inject DeleteModalService DeleteModalService

<div class=" modal-header border-0 mb-2" style="padding: 0">
    <h5> ExceptionalItem </h5>
    <!-- Buttons -->
    <div class="btn-group" role="group">
        <div class="btn-group" role="group">
            <button class="btn icon-btn bg-brand-100" type="button" @onclick="CreateExceptionalItem">
                <i class="fa fa-plus"></i>
            </button>

            <button class="btn icon-btn btn-danger" type="button" @onclick="DeleteExceptionalItem">
                <i class="fa-solid fa-trash"></i>
            </button>
        </div>
    </div>
</div>
<!-- Table -->
<div class="table-responsive custom-table-wrapper" style="max-height: 285px;">
    <table class="table table-hover table-bordered align-middle  custom-table">
        <thead>
            <tr>
                <th style="width:3%">
                    <input type="checkbox"
                           class="form-check-input"
                           checked="@IsAllSelected"
                           @onchange="ToggleSelectAll" /> @* *@

                </th>
                <th style="width:28%;">Exceptional item</th>
                <th style="width:25%">Cost centre</th>
                <th style="width:15%">Count</th>
                <th style="width:15%">Duration</th>
                <th style="width:15%"> Cost</th>
              
            </tr>
        </thead>

        <tbody>
            @if (exceptionalItem == null || !exceptionalItem.Any())
            {
                <tr>
                    <td colspan="5" class="text-center text-muted py-3">
                        No matching records found
                    </td>
                </tr>
            }
            else
            {
                @foreach (var record in exceptionalItem)
                {
                    <tr>
                        <td>
                            <input type="checkbox"
                                   class="form-check-input"
                                   checked="@selectedExceptionItems.Contains(record.Id)"
                                   @onchange="(e) => ToggleSelection(record.Id, (bool)e.Value!)" />
                        </td>
                        <td>@record.ExceptionalItemTypeDisplay</td>
                        <td>@record.CostCentreDisplay</td>
                        <td>@record.Count</td>
                       
                        <td>@record.DurationDisplay</td>
                        <td>@record.Cost</td>

                    </tr>
                }
            }

        </tbody>
    </table>
</div>
<CreateEdirWorkRecordExceptionalItemsTabModel @ref=createEditWorkRecordExceptionalTabModelref isSubmitting="@isSubmitting" OnSubmit="OnExceptionalItemSaved" />
 <DeleteConfirmationPage IsVisible="@showDeletePopup" Message="@popupDeleteMessage" OnDelete="ConfirmDelete" OnCancel="CloseDeletePopup" /> 
@code {
    [Parameter] public EventCallback ReloadWorkRecordAsync { get; set; }
    [Parameter] public int EmployeeId { get; set; }
    [Parameter] public DateTime shiftDate { get; set; }
    [Parameter] public int employeeShiftId { get; set; }

    CreateEdirWorkRecordExceptionalItemsTabModel? createEditWorkRecordExceptionalTabModelref;
    public CreateEditWorkRecordExceptionalItemViewModel createEditExceptionalItemModel { get; set; } = new();
    public bool isSubmitting { get; set; }

    [Parameter] public List<ExceptionalItem> exceptionalItem { get; set; } = new();

    private HashSet<int> selectedExceptionItems = new();

    private bool IsAllSelected =>
        exceptionalItem.Any() &&
        exceptionalItem.All(r => selectedExceptionItems.Contains(r.Id));

    private void ToggleSelection(int id, bool isChecked)
    {
        if (isChecked)
            selectedExceptionItems.Add(id);
        else
            selectedExceptionItems.Remove(id);
    }

    private void ToggleSelectAll(ChangeEventArgs e)
    {
        bool isChecked = (bool)e.Value!;

        if (isChecked)
        {
            selectedExceptionItems = exceptionalItem
                .Select(r => r.Id)
                .ToHashSet();
        }
        else
        {
            selectedExceptionItems.Clear();
        }
    }

    public async Task CreateExceptionalItem()
    {
        SpinnerService.Show();
        int companyId = await UserContextService.GetCompanyIdAsync(AuthenticationStateProvider);
        try
        {
            var costCentres = await WorkRecordNotesService.GetCostCentresAsync(companyId);
            var exceptionalItemType = await WorkRecordNotesService.GetWorkRecordExceptionalItemAsync(companyId);
            var exceptionalItemModel = new CreateEditWorkRecordExceptionalItemViewModel
            {
                StartTime = DateTime.Now,
                EndTime = DateTime.Now.AddHours(1),
                StartTimeSpan = DateTime.Now.TimeOfDay,
                EndTimeSpan = DateTime.Now.AddHours(1).TimeOfDay,

                EmployeeId = EmployeeId
            };

            exceptionalItemModel.CostCentres = costCentres
                      .Select(c => new SelectListItem
                      {
                          Value = c.Id.ToString(),
                          Text = c.Name
                      }).ToList();

            exceptionalItemModel.CostCentres.Insert(0,
                new SelectListItem { Value = "", Text = "Select" });

            exceptionalItemModel.ExceptionalItemTypeSelect = exceptionalItemType
                                 .Select(c => new SelectListItem
                                 {
                                     Value = c.Id.ToString(),
                                     Text = c.Name
                                 }).ToList();
            await createEditWorkRecordExceptionalTabModelref!.ShowModal(exceptionalItemModel);
        }
        finally
        {
            SpinnerService.Hide();
        }
    }

    public async Task OnExceptionalItemSaved(CreateEditWorkRecordExceptionalItemViewModel exceptionalItemViewModel)
    {
        isSubmitting = true;
        SpinnerService.Show();
        try
        {
            int companyId = await UserContextService.GetCompanyIdAsync(AuthenticationStateProvider);
            int userId = await UserContextService.GetUserIdAsync(AuthenticationStateProvider);

            int durationInMins = (int)(exceptionalItemViewModel.EndTime - exceptionalItemViewModel.StartTime)?.TotalMinutes;

            var exceptionalItem = new ExceptionalItem
            {
                Id = exceptionalItemViewModel.Id ?? 0,
                EmployeeId = EmployeeId,

                ShiftDate = shiftDate,
                ExceptionalItemTypeId = exceptionalItemViewModel.ExceptionalItemTypeId,
                CostCentreId = exceptionalItemViewModel.CostCentreId,
                Count = exceptionalItemViewModel.Count,
                Cost = exceptionalItemViewModel.Cost,
                Duration = durationInMins,
                CompanyId = companyId,
                UpdatedByUserId = userId,
                UpdatedDate = Helpers.Helper.GetDateTimeNow()
            };

            if (exceptionalItem.Id == 0)
            {
                exceptionalItem.CreatedByUserId = userId;
                exceptionalItem.CreatedDate = Helpers.Helper.GetDateTimeNow();
            }

            int savedId = await WorkRecordNotesService.SetExceptionalItemAsync(exceptionalItem);

            await JS.InvokeVoidAsync("hideModal", "exceptionalItemModel");
            await ReloadWorkRecordAsync.InvokeAsync();
            ToastService.Show("Exceptional item saved successfully!.", ToastType.Success);
        }
        finally
        {
            isSubmitting = false;
            SpinnerService.Hide();
        }
    }

//DeleteLogic
    bool showDeletePopup = false;
    string popupDeleteMessage = "";

    void CloseDeletePopup()
    {
        showDeletePopup = false;
    }

    void DeleteExceptionalItem()
    {
        if (selectedExceptionItems.Count == 0)
        {
            ToastService.Show("Please select at least one exceptional item record to delete", ToastType.Warning);
            return;
        }
        popupDeleteMessage = $"Are you sure you want to delete {selectedExceptionItems.Count} exceptionalItem(s)?";
        showDeletePopup = true;
    }

