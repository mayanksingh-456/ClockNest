<div class="modal fade right" id="employeeModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable modal-xl modal-right">
        <div class="modal-content h-100 border-0">

            <EditForm Model="@EmployeeModal" OnSubmit="HandelValidSubmit" class="d-flex flex-column h-100">
                <DataAnnotationsValidator />

                <!-- Header-->
                <div class="modal-header border-0">
                    <h5 > @((EmployeeModal.Id ==0) ? "Create Employee" : "Edit Employee") </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <!-- Body-->
				<div class="modal-body overflow-auto flex-grow-1" style="max-height: 90vh; margin-top: -15px;">
					<div class="row h-100">
					@* <div class="col-md-3 bg-light p-3 border-end"> *@
						<div class="col-md-3 p-3 border-end" style="background:#F9FAFB;">


						<div class="text-center mb-3">
							<div class="position-relative d-inline-block">
								<img src=""@*  @GetBase64Photo() *@
									 class="rounded-circle"
										 style="width:120px; height:120px; object-fit:cover; object-position:center; border: 3px solid #e91e63;" />
								<label class="btn_modal-success_save p-1 position-absolute"
									   style="bottom:0; right:0; border-radius:50%; width: 28px ! Important; height:28px; cursor:pointer;">
									<i class="fa-solid fa-pen-to-square" style="color:#FFFFFF; pointer-events: none;"></i>
									@* <InputFile OnChange="OnPhotoSelected"
											   accept="image/*"
											   style="opacity:0; position:absolute; left:0; top:0; width:100%; height:100%;" /> *@
								</label>
							</div>
							<h6 class="employee-name fw-bold mt-2">
								@($"{EmployeeModal.CreateEditEmployeeDetailsViewModel.Forename} {EmployeeModal.CreateEditEmployeeDetailsViewModel.Surname}")
							</h6>
						</div>

						<div class="info-box">
							<h6 class="section-title">Contact</h6>
							@* <p class="body-medium mb-1">Email: @EmployeeModal.CreateEditEmployeePersonalInfoViewModel.Email</p>
							<p class="body-medium mb-0">Phone:  @EmployeeModal.CreateEditEmployeePersonalInfoViewModel.Mobile</p> *@
						</div>

						<div class="info-box">
							<h6 class="section-title">Employment</h6>
							<p class="body-medium mb-1">Join Date: @EmployeeModal.CreateEditEmployeeAdditionalInfoViewModel.JoinDateDisplay</p>
							<p class="body-medium mb-0">Length of service: @EmployeeModal.CreateEditEmployeeAdditionalInfoViewModel.LengthOfService</p>
						</div>

						<div class="info-box">
							<h6 class="section-title">Manager</h6>
							@if (EmployeeModal.CreateEditEmployeeManagerEmployeeViewModel == null)
							{
								<div class="d-flex align-items-center body-medium">Not set</div>
							}
							@* else
							{
								<div class="d-flex align-items-center">
									<img src="@(EmployeeModal.CreateEditEmployeeManagerEmployeeViewModel.Manager.Photo != null
																		  			 ? $"data:image/png;base64,{Convert.ToBase64String(EmployeeModal.CreateEditEmployeeManagerEmployeeViewModel.Manager.Photo)}"
																		  			 : "avtar.png")"
																															 class="rounded-circle border me-2"
																															 style="width:40px; height:40px; object-fit:cover;" />

									<span class="body-medium">
										@(string.IsNullOrWhiteSpace(EmployeeModal.CreateEditEmployeeManagerEmployeeViewModel.Manager?.Forename)
																			? "Not set"
																			: $"{EmployeeModal.CreateEditEmployeeManagerEmployeeViewModel.Manager.Forename} {EmployeeModal.CreateEditEmployeeManagerEmployeeViewModel.Manager.Surname}")
								</span>
							</div>
														} *@
						</div>

						<div class="info-box">
							<h6 class="section-title">Employees Managed</h6>
							@if (EmployeeModal.CreateEditEmployeeManagerEmployeeViewModel?.EmployeesManaged?.Any() == true)
							{
								<div class="scroll-container">
									@* @foreach (var emp in EmployeeModal.CreateEditEmployeeManagerEmployeeViewModel.EmployeesManaged)
									{
										string imageSrc;
										if (emp.Photo != null && emp.Photo.Length > 0)
										{
											imageSrc = $"data:image/png;base64,{Convert.ToBase64String(emp.Photo)}";
										}
										else
										{
											imageSrc = "/avtar.png";
										}
										<div class="employee-item">
											<img src="@imageSrc"
												 class="rounded-circle border me-2"
												 style="width:40px; height:40px; object-fit:cover;" />
											<span class="body-medium ">@emp.FullName</span>
										</div>
									} *@
								</div>
							}
							else
							{
								<p class="body-medium mb-0">None</p>
							}
						</div>
					</div>

						<div class="col-md-9 p-3 pt-0 body-medium">
								<ul class="nav nav-tabs mb-3">
									<li class="nav-item">
										<a class="nav-link @(activeTab == "dashboard" ? "active" : "")" href="#dashboard" data-bs-toggle="tab" @onclick="@(() => OnTabClick("dashboard"))">Dashboard</a>
									</li>
									<li class="nav-item">
										<a class="nav-link @(activeTab == "details" ? "active" : "")" href="#details" data-bs-toggle="tab" @onclick="@(() => OnTabClick("details"))">Details</a>
									</li>
									<li class="nav-item">
									<a class="nav-link @(activeTab == "personalInfo" ? "active" : "")" href="#personalInfo" data-bs-toggle="tab" @onclick="@(() => OnTabClick("personalInfo"))">Personal info</a>
									</li>
									<li class="nav-item">
										<a class="nav-link @(activeTab == "notes" ? "active" : "")" href="#notes" data-bs-toggle="tab" @onclick="@(() => OnTabClick("notes"))">Notes</a>
									</li>
								
                                </ul>

								<div class="tab-content p-0 bg-transparent">
									<div class="tab-pane fade @(activeTab == "dashboard" ? "show active" : "")" id="dashboard">
										
									</div>
									<div class="tab-pane fade @(activeTab == "details" ? "show active" : "")" id="details">
									<CreateEditEmployeeDetailsTab employeeDetailsViewModel="EmployeeModal.CreateEditEmployeeDetailsViewModel" />
									</div>
								<div class="tab-pane fade @(activeTab == "personalInfo" ? "show active" : "")" id="personalInfo">
										<CreateEditEmployeePersonalInfoTab personalInfoViewModel="EmployeeModal.CreateEditEmployeePersonalInfoViewModel"/>
									</div>
								</div>

								<div class="tab-pane fade @(activeTab == "notes" ? "show active" : "")" id="notes">
									<CreateEditEmployeeNotesTab notesViewModel="EmployeeModal.CreateEditEmployeeNotesViewModel"/>
								</div>

								</div>
</div>
                </div>

                <!-- Footer-->
               @*  <div class="modal-footer sticky-bottom border-0">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div> *@
				<div class="modal-footer bg-white mt-auto" style="padding-top: 1rem;">
					<button type="button" class="btn_modal-close body-medium" data-bs-dismiss="modal">Cancel</button>
					<button type="submit"
							class="btn_modal-success_save title-h4-semi-bold"
							disabled="@isSubmitting"
							style="@(isSubmitting ? "opacity: 0.6; pointer-events: none;" : null)">
						@if (isSubmitting)
						{
							<span><i class="spinner-border spinner-border-sm me-1"></i> Saving...</span>
						}
						else
						{
							<span>Save</span>
						}
					</button>
				</div>

            </EditForm>
        </div>
    </div>
</div>

@code{



	[Parameter] public bool isSubmitting { get; set; }
	[Parameter] public CreateEditEmployeeViewModel EmployeeModal { get; set; } = new();
	[Parameter] public EventCallback<CreateEditEmployeeViewModel> OnSubmit { get; set; }

	private string activeTab;
	private void OnTabClick(string details)
	{
		activeTab = details;
	}
	public async Task ShowModal(CreateEditEmployeeViewModel model)
    {
        EmployeeModal = model; 
        activeTab = "details"; 
        await JS.InvokeVoidAsync("showModal", "employeeModal");
    }

    public async Task HandelValidSubmit()
    {
        
    }
}