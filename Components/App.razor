    <!--Daily overtime -->
    <script>
        window.renderOvertimeReasonsChart = (data, labels) => {
            const ctx = document.getElementById('overtimeReasonsChart').getContext('2d');
            if (window.dailyOvertimeReasonsChartInstance) {
                window.dailyOvertimeReasonsChartInstance.destroy();
            }

            window.dailyOvertimeReasonsChartInstance = new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: labels,
                    datasets: [{
                        data: data,
                        backgroundColor: ['#FF6384', '#36A2EB', '#FFCE56', '#4BC0C0', '#9966FF'],
                        borderWidth: 0,
                    }]
                },
                options: {
                    responsive: true,
                    cutout: '70%',
                    plugins: {
                        legend: { position: 'bottom' },
                        tooltip: {
                            callbacks: {
                                label: (ctx) => {
                                    const total = data.reduce((a,b) => a + b, 0);
                                    const label = ctx.label || '';
                                    const value = ctx.raw || 0;
                                    const percentage = total > 0 ? ((value / total) * 100).toFixed(1) : 0;
                                    return `${label}: ${value} (${percentage}%)`;
                                }
                            }
                        }
                    }
                }
            });
        };

    </script>
