            if (!ctx) return;

            if (window.hoursWorkedChartInstance) {
                window.hoursWorkedChartInstance.destroy();
            }

            const total = data.reduce((sum, val) => sum + val, 0);

            window.hoursWorkedChartInstance = new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: labels,
