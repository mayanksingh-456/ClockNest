            const el = document.getElementById(id);
            const modal = bootstrap.Modal.getInstance(el);
            modal.hide();
        };
    </script>

    <!--Download document script-->
    <script>
            function downloadFile(base64, fileName, contentType) {
            const link = document.createElement('a');
            link.href = `data:${contentType};base64,${base64}`;
            link.download = fileName;
            link.click();
        }
    </script>

    <!--Holiday Sick Absence Chart--> 
    <script>
        window.DashboardChartInstance = null;

        window.renderHoursWorkedChart = (data) => {
            const total = data.reduce((sum, val) => sum + val, 0);
            const ctx = document.getElementById("hoursWorkedChart").getContext("2d");

            if (window.DashboardChartInstance) {
                window.DashboardChartInstance.destroy();
            }

            const labels = ["Absence", "Holiday", "Sickness"];

            window.DashboardChartInstance = new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: labels,
                    datasets: [{
                        data: data,
                        backgroundColor: ["magenta", "yellow", "cyan"],
                        borderWidth: 0
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: true,
                    aspectRatio: 1,
                    cutout: '70%',
                    plugins: {
                        legend: {
                            display: true,
                            position: 'bottom',
                            labels: {
                                font: {
                                    family: 'sans-serif', 
                                    size: 12
                                },
                                color: '#333',
                                boxWidth: 20
                            }
                        },
                        tooltip: {
                            enabled: true,
                            callbacks: {
                                title: () => [],
                                label: (ctx) => {
                                    const label = ctx.label || '';
                                    const value = ctx.raw || 0;
                                    const percentage = total > 0 ? ((value / total) * 100).toFixed(1) : 0;
                                    return `${label}: ${value} (${percentage}%)`;
                                }
                            }
                        }
                    },
                    layout: {
                        padding: 5
                    }
                }
            });
        };
    </script>

    <!--Daily overtime -->
    <script>
        window.overtimeChartInstance = null;

        window.renderOvertimeReasonsChart = (data, labels) => {
            const total = data.reduce((sum, val) => sum + val, 0);
            const ctx = document.getElementById("overtimeReasonsChart").getContext("2d");

            if (window.overtimeChartInstance) {
                window.overtimeChartInstance.destroy();
            }

            const chartData = total === 0 ? [1] : data;
            const chartColors = total === 0
                ? ['#EDEEF0']
                : ['#007BFF', 'darkgreen'];

            const finalLabels = total === 0 ? ['No Data'] : (labels && labels.length ? labels : ['Label 1', 'Label 2']);

            window.overtimeChartInstance = new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: finalLabels,
                    datasets: [{
                        data: chartData,
                        backgroundColor: chartColors,
                        borderWidth: 0
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: true,
                    aspectRatio: 1,
                    cutout: '70%',
                    plugins: {
                        legend: {
                            display: true,
                            position: 'bottom',
                            labels: {
                                font: {
                                    family: 'sans-serif', 
                                    size: 12
                                },
                                color: '#333',
                                boxWidth: 20
                            }
                        },
                        tooltip: {
                            enabled: total !== 0,
                            callbacks: {
                                title: () => [],
                                label: (ctx) => {
                                    const label = ctx.label || '';
                                    const value = ctx.raw || 0;
                                    const percentage = total > 0 ? ((value / total) * 100).toFixed(1) : 0;
                                    return `${label}: ${value} (${percentage}%)`;
                                }
                            }
                        }
                    },
                    layout: {
                        padding: 5
                    }
                }
            });
        };
    </script>

    <!-- Wored vs contracted-->
    <script>
        window.hoursVsContractedInstance = null;

        window.renderHoursWorkedVsContractedChart = (chartData) => {

            const ctx = document.getElementById("hoursWorkedVsContractedChart").getContext("2d");

            if (window.hoursVsContractedInstance) {
                window.hoursVsContractedInstance.destroy();
            }

            const labels = chartData.map(x => {
                const d = new Date(x.date);
                return d.toLocaleDateString();
            });

            window.hoursVsContractedInstance = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: labels,
                    datasets: [
                        {
                            label: "Hours Worked",
                            data: chartData.map(x => x.hoursWorked),
                            fill: true,
                            tension: 0.4,
                            backgroundColor: "rgba(0,100,0,0.9)",
                            borderColor: "rgba(0,100,0,1)"
                        },
                        {
                            label: "Holiday",
                            data: chartData.map(x => x.holiday),
                            fill: true,
                            tension: 0.4,
                            backgroundColor: "rgba(255,0,128,0.5)"
                        },
                        {
                            label: "Sickness",
                            data: chartData.map(x => x.sickness),
                            fill: true,
                            tension: 0.4,
                            backgroundColor: "rgba(0,255,255,0.5)"
                        },
                        {
                            label: "Absence",
                            data: chartData.map(x => x.absence),
                            fill: true,
                            tension: 0.4,
                            backgroundColor: "rgba(255,215,0,0.5)"
                        },
                        {
                            label: "Contracted",
                            data: chartData.map(x => x.contracted),
                            fill: true,
                            tension: 0.4,
                            backgroundColor: "rgba(144,238,144,0.4)"
                        }
                    ]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            position: 'bottom'
                        }
                    },
                    scales: {
                        x: { stacked: true },
                        y: { stacked: true, beginAtZero: true }
                    }
                }
            });
        };
    </script>

